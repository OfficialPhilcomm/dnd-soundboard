.soundCard
  .soundCard-sound{class: sound.color, data: {controller: "sound", sound_target: "root"}}
    %audio{loop: true, src: "sounds/#{sound.name}.mp3", data: {sound_target: "sound", action: "play->sound#handlePlay pause->sound#handlePause"}}

    .soundCard-sound-name{title: sound.name}= sound.name

    %i.bx.bx-play-circle.soundCard-sound-play{data: {action: "click->sound#play"}}
    %i.bx.bx-stop-circle.soundCard-sound-stop{data: {action: "click->sound#stop"}}
